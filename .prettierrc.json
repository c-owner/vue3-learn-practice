{
    "singleQuote": true,
    "semi": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "printWidth": 140,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "*.vue",
            "options": {
                "vueIndentScriptAndStyle": false
            }
        },
        {
            "files": "*.cjs",
            "options": {
                "parser": "babel",
                "singleQuote": false,
                "semi": false,
                "trailingComma": "none"
            }
        }
    ]
}
